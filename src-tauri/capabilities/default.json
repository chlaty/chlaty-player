{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "deep-link:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        }
      ],
      "deny": []
    },
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/"
        },
        {
          "path": "$APPDATA/.cache"
        },
        {
          "path": "$APPDATA/.cache/**"
        },
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$TEMP/*"
        },
        {
          "path": "$TEMP/"
        }
      ]
    }
  ]
}